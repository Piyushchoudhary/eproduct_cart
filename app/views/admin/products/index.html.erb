<p id="notice"><%= notice %></p>

<h1>Admin Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Product type</th>
      <th>No pages</th>
      <th>Publisher</th>
      <th>Publication date</th>
      <th>Isbn</th>
      <th>Price</th>
      <th>Writer name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |admin_product| %>
      <tr>
        <td><%= admin_product.title %></td>
        <td><%= admin_product.description %></td>
        <td><%= admin_product.product_type_id %></td>
        <td><%= admin_product.no_of_pages %></td>
        <td><%= admin_product.publisher %></td>
        <td><%= admin_product.publication_date %></td>
        <td><%= admin_product.isbn %></td>
        <td><%= admin_product.price %></td>
        <td><%= admin_product.writer_name %></td>
        <td><%= link_to 'Show', admin_product_path(admin_product) %></td>
        <td><%= link_to 'Edit', edit_admin_product_path(admin_product) %></td>
        <td><%= link_to 'Destroy', admin_product_path(admin_product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin Product', new_admin_product_path %>
