<% if product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

    <ul>
    <% product.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= f.label :category_id %>
  <%= f.collection_select :category_id, Category.order(:name), :id, :name %>
</div>

<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>

<div class="field">
  <%= f.label :product_type_id %>
  <%= f.collection_select :product_type_id, ProductType.order(:name), :id, :name %>
</div>

<div class="field">
  <%= f.label :no_of_pages %>
  <%= f.number_field :no_of_pages %>
</div>

<div class="field">
  <%= f.label :publisher %>
  <%= f.text_field :publisher %>
</div>

<div class="field">
  <%= f.label :isbn %>
  <%= f.text_field :isbn %>
</div>

<div class="field">
  <%= f.label :price %>
  <%= f.text_field :price %>
</div>

<div class="field">
  <%= f.label :writer_name %>
  <%= f.text_field :writer_name %>
</div>

<div class="field">
  <%= f.label :out_of_stock %>
  <%= f.check_box :out_of_stock %>
</div>

<div class="field">
  <%= f.label :image %>
  <% if @product.image.exists? %>
    <%= image_tag(@product.image.url(:thumb), class: 'thumbnail_image') %><br/>
  <% end %>
  <%= f.file_field :image %>
  <%= f.check_box :delete_image %>Delete Image<br/>
</div>

<div class="field">
  <%= f.label :product_file %>
  <% if @product.product_file.exists? %>
    <a href="<%= @product.product_file.url %>" target="_blank">Product File</a><br/>
  <% end %>
  <%= f.file_field :product_file %>
  <%= f.check_box :delete_product_file %>Delete Product File<br/>
</div>

<div class="actions">
  <%= f.submit %>
</div>
